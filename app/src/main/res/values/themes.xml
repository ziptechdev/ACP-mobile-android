<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ACPMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.ACPMobile.Regular" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="TitleTextBlue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/x_x_large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTextWhite" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x_x_large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTextBlack" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextBlue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextWhite" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonBlue">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonYellow">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonGray">
        <item name="android:backgroundTint">@color/grayBtn</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="ButtonWhite">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonWhiteWithBlueStroke">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonBlueStroke">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonWhiteStroke">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="NoBackgroundDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="TextViewDisable">
        <item name="android:backgroundTint">@color/grayLight</item>
        <item name="android:background"> @drawable/round_element_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DataPickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

</resources>
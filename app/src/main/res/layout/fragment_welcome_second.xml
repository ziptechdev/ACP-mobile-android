<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.welcomeFragments.WelcomeFragmentSecond"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/svWelcomeSecond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="45"
            android:background="@drawable/round_element_20"
            android:backgroundTint="@color/grayLight" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="45"
            android:background="@drawable/round_element_20"
            android:backgroundTint="@color/colorPrimary" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/svWelcomeSecond"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWelcomeSecondTitle"
                style="@style/TitleTextBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_and_policy" />

            <TextView
                android:id="@+id/tvWelcomeSecondText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:lineSpacingExtra="10sp"
                android:lineSpacingMultiplier="0.8"
                android:text="@string/welcome_second_text_first" />

            <TextView
                android:id="@+id/tvWelcomeSecondText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:lineSpacingExtra="10sp"
                android:lineSpacingMultiplier="0.8"
                android:text="@string/welcome_second_title_second2" />


            <TextView
                android:id="@+id/tvWelcomeSecondText3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:lineSpacingExtra="10sp"
                android:lineSpacingMultiplier="0.8"
                android:text="@string/welcome_second_title_second3" />


            <TextView
                android:id="@+id/tvWelcomeSecondTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/normal_margin"
                android:text="@string/label_consent" />

            <TextView
                android:id="@+id/tvWelcomeSecondText4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:lineSpacingExtra="10sp"
                android:lineSpacingMultiplier="0.8"
                android:text="@string/label_by_using_our_website" />

            <TextView
                android:id="@+id/tvWelcomeSecondTitle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:layout_marginTop="@dimen/normal_margin"
                android:textColor="@color/colorPrimary"
                android:text="@string/label_information_we_collect" />

            <TextView
                android:id="@+id/tvWelcomeSecondText5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:lineSpacingExtra="10sp"
                android:lineSpacingMultiplier="0.8"
                android:text="@string/label_personal_info_description" />

            <TextView
                android:id="@+id/tvWelcomeSecondText6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:lineSpacingExtra="10sp"
                android:lineSpacingMultiplier="0.8"
                android:text="@string/label_personal_info_description_2" />

            <TextView
                android:id="@+id/tvWelcomeSecondText7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:lineSpacingExtra="10sp"
                android:lineSpacingMultiplier="0.8"
                android:text="@string/label_personal_info_description_3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWelcomeSecondAccept"
                style="@style/ButtonBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/extra_large_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:text="@string/welcome_second_button"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
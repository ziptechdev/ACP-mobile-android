<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ACPMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleTextBlue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/x_x_large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTextWhite" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x_x_large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBlue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="TextWhite" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="TextGray" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="ButtonBlue">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/medium_padding</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/medium_padding</item>
    </style>

    <style name="ButtonBlueStroke">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonWhiteStroke">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/white</item>
    </style>
</resources>